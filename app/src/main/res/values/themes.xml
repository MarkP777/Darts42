<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Darts42" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dartsboard_green</item>
        <item name="android:colorBackground">@color/yellow_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textAppearance">@style/AppTextAppearance</item>
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="actionBarStyle">@style/AppActionBarStyle</item>
        <item name="actionBarTheme">@style/AppActionBarTheme</item>

        <item name="android:spinnerItemStyle">@style/AppSpinnerItemStyle</item>

        <!-- Seems to be the colour used in all the textviews -->
        <!--<item name="android:textColorTertiary">@color/black</item> -->

    </style>

    <style name="AppActionBarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!--Changes the colour of the text in the Action Bar
        <item name="android:textColorPrimary">@color/black</item>
        -->
    </style>

    <!--
    <style name="Theme.Darts42.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    -->

    <style name="AppTextAppearance" parent="TextAppearance.AppCompat">
        <!--Text size of radio button prompts-->
        <!--item name="android:textSize">24dp</item-->
    </style>

    <style name="AppTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <!--Text appearance of almost everything else-->
        <item name="android:textColor">@color/black</item>
        <!--item name="android:textSize">24dp</item-->

    </style>

    <style name="AppActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Solid">
        <!--Changes the background colour of the Action Bar -->
        <item name="background">@color/dartsboard_red</item>
        <item name="titleTextStyle">@style/AppTitleTextStyle</item>
    </style>

    <style name="AppTitleTextStyle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <!--Changes the size and style of the title in the Action Bar -->
        <!--
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        -->
    </style>

    <style name="AppSpinnerItemStyle" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <!-- Used to reduce the padding at the start of the spinner to aid alignment
            And set the size of the dropdown text -->
        <item name="android:paddingStart">0sp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme" parent="Theme.Darts42"></style>

    <style name="AppChalkboardTheme" parent="Theme.Darts42">
        <item name="colorPrimary">@color/dartsboard_green</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textViewStyle">@style/AppChalkboardText</item>
    </style>

        <style name="AppChalkboardText" parent="Widget.MaterialComponents.TextView">
            <item name="android:textColor">@color/white</item>
        </style>

    <style name="AppKeyboardButton" parent = "Widget.MaterialComponents.Button">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">5dp</item>
    </style>




</resources>